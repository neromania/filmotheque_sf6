{% extends 'base.html.twig' %}

{% block title %}Actor index{% endblock %}

{% block body %}
    <h1>Actor index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Prénom</th>
                <th>Nom</th>
                <th>Date de naissance</th>
                <th>Sexe</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for actor in actors %}
            <tr>
                <td>{{ actor.id }}</td>
                <td>{{ actor.firstname }}</td>
                <td>{{ actor.lastname }}</td>
                <td>{{ actor.birthday ? actor.birthday|date('d-m-Y') : '' }}</td>
                <td>{{ actor.gender }}</td>
                <td>
                    <a href="{{ path('app_actor_show', {'id': actor.id}) }}">Voir</a>
                    <a href="{{ path('app_actor_edit', {'id': actor.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">Aucun acteur enregistré</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_actor_new') }}">Créer nouvel acteur</a>
{% endblock %}
